{
  // ===== 根目录配置：仅用于项目引用和路径映射 =====
  "compilerOptions": {
    // ===== 基础配置 =====
    // "composite": true,                     // 启用项目引用
    // "declaration": true,                   // 生成声明文件
    // "declarationMap": true,                // 生成声明文件的 source map
    // "noEmit": true,                        // 不生成输出文件（仅类型检查）
    
    // ===== 路径映射配置 =====
    "baseUrl": ".",                        // 基础路径
    "paths": {
      "@shared/*": ["./packages/shared/src/*"],     // @shared 别名指向共享包
      "@tiny-media/*": ["./packages/tiny-media/src/*"], // @tiny-media 别名
      "@tiny-peony/*": ["./packages/tiny-peony/src/*"], // @tiny-peony 别名
      "@packages/*": ["./packages/*"]               // @packages 通用别名
    }
  },
  
  // ===== 项目引用配置 =====
  "references": [
    {
      "path": "./packages/shared"          // 引用共享包（基础依赖）
    },
    {
      "path": "./packages/tiny-media"      // 引用 tiny-media 包
    },
    {
      "path": "./packages/tiny-peony"      // 引用 tiny-peony 包
    }
  ]
} 